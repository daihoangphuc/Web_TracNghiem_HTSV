@model List<Web_TracNghiem_HTSV.Models.Test>

@{
    ViewBag.Title = "Select Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Select Test</h1>

<div class="container mx-auto p-4 sm:p-8">
    @foreach (var test in Model)
    {
        <div class="bg-white shadow-md rounded-lg p-6 mb-8 quiz-card">
            <h3 class="mb-4 text-lg font-bold">Test: @test.TestName</h3>
            <a class="text-blue-500" asp-action="TestDetails" asp-route-id="@test.TestId">Start Test</a>
        </div>
    }
</div>
