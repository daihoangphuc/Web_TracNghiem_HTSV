@model IEnumerable<SelectListItem>

@{
    ViewData["Title"] = "Edit Roles";
}

<h2>Edit Roles for @ViewBag.UserName</h2>

<form asp-action="EditRole" method="post">
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label for="roles">Roles:</label>
                <select id="roles" name="roles" multiple class="form-control">
                    @foreach (var role in ViewBag.Roles as List<SelectListItem>)
                    {
                        <option value="@role.Value" selected="@role.Selected">@role.Text</option>
                    }
                </select>
            </div>
            <input type="hidden" name="id" value="@ViewBag.UserId" />
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
